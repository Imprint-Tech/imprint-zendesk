<div class='header-wrapper'>
  <header class='header'>
    <div class='leading'>
      <div class='logo'>
        {{#link 'help_center'}}
          <img src='{{asset "logo_light.png"}}' alt='{{t "home_page" name=help_center.name}}' />
        {{/link}}
      </div>

      {{!-- <ul id='support_categories' class='support_categories'></ul>

      {{! log the help_center value }}

      <script>
        console.log(
        {{help_center.url}});
      </script>

      <script>
